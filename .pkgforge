name 'tinc'
org 'amylum'

license 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  },
  ncurses: {
    version: '6.0-20170923-1',
    checksum: 'cbfc414695861fbced1164251dbaf3872e61d1dfb524007ad838c8c522e59cf4'
  },
  readline: {
    version: '7.0-32',
    checksum: '1862e257b4cf0f81922961bb7026c66cd8120e54b9cf8123739e69e5296d240e'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
    version: '1.0.2l-1',
    checksum: '6a46a1a65aa5cadc69a2b01e3ef8fa0a38353f3f7b86c1a772ab5156dd5b2264'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)

cflags
harden

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  run 'tinc version'
end
