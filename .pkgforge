license 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.17-1',
    checksum: 'b2526797b346c73dc44da02dc16def8eb2059c02bd015f76497e9babadc1a44f'
  },
  ncurses: {
    version: '6.1-20180721-1',
    checksum: 'f6d3dc5239fff68f3e100764900542fea1708b61a0196a19f2c22a3db296a5d8'
  },
  readline: {
    version: '7.0p5-9',
    checksum: '1b5efdc92968aa176c85bb3e815e1972f3651bf0bbee34daf22cdccb777dadb1'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
