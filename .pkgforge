    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  },
  ncurses: {
    version: '6.1-20181013-1',
    checksum: '58a022f9f446e7415554e9c1295a9e62b0f7d6821d285767de0881d6ff82b445'
  },
  readline: {
