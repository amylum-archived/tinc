name 'tinc'
org 'amylum'

license 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  },
  ncurses: {
    version: '6.1-20180407-1',
    checksum: '46f74102f7952373bba36c0504653ee521ef22abbc7a5a696192234364d03634'
  },
  readline: {
    version: '7.0p3-18',
    checksum: 'd089dbf65ffbf3f95d19877b2b3a57b45a82456865af435605b4fcf9de062e6d'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
    version: '1.1.0h-2',
    checksum: 'c56e167c5836f9445472b723b5f7b15f3eff19e0d312b4046852605b0706b7c7'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)

cflags
harden

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  run 'tinc version'
end
