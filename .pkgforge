name 'tinc'
org 'amylum'

license 'COPYING'

deps(
  'linux-api-headers': '4.9-rc3-2',
  ncurses: '6.0-3'
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)

cflags
harden

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  run 'tinc version'
end
