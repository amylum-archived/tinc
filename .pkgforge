name 'tinc'
org 'amylum'

license 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  },
  ncurses: {
    version: '6.0-20180106-1',
    checksum: 'dead4635295d3b479e491f2bde8cb11f63e0d94f51e05203bfa42f5cb356ca18'
  },
  readline: {
    version: '7.0p3-7',
    checksum: '5dbc090cc396e650711ac96f946738d7a291383603d2c0b323cb4a511a399428'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
    version: '1.1.0g-1',
    checksum: 'f70d94ca94f05be4a14438cf29ed4695d9731d023a4b72d30126d826720bc48b'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)

cflags
harden

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  run 'tinc version'
end
