name 'tinc'
org 'amylum'

license 'COPYING'

deps(
  'linux-api-headers': '4.9-1',
  ncurses: '6.0-20161231-1',
  readline: '7.0-8',
  zlib: '1.2.10-1',
  lzo: '2.09-1',
  openssl: '1.0.2j-3'
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)

cflags
harden

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  run 'tinc version'
end
