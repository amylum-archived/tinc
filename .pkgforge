    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  },
  ncurses: {
    version: '6.0-20171216-1',
    checksum: '968a63a1c89158ecca201a943c6e9246bd83545f83cca363f425facf0702bc34'
  },
  readline: {
