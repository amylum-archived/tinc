    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  },
  ncurses: {
    version: '6.0-20171209-1',
    checksum: '113459258308d5202bde8b707fa4b0aa0e76e62de689bfaa82b463cb9b4c4b4c'
  },
  readline: {
    version: '7.0p3-3',
    checksum: '62f46b369e1cddf1475323c2a0f419a2d586033fa8bd78b3c8c6ce51620a3b20'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
