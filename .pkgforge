org 'amylum'

license 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.20-1',
    checksum: 'aed037b2b3fb2df77ca19359a20188d39c25d011febf4d3733d251fa87ca9636'
  },
  ncurses: {
    version: '6.1-20190112-1',
    checksum: 'c851c4eb3bb3f7a2640f2f500025144ec705bd5089872d0b348b4e0d5a119575'
  },
  readline: {
    version: '8.0-2',
    checksum: 'b1c9e19f713ce44a09038d4366dbb2d0a8d4d50d1d4595a01b2f625a8e4a6b75'
  },
  zlib: {
    version: '1.2.11-6',
    checksum: '7da7212123edac6d5d5dc2db8fb10a6af06472578840c51e489e1f391b66c208'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
    version: '1.1.1a-1',
    checksum: '70b9b57ef55293a4df4cc18776dc56d77d78856960bcc6571f8a009f00faf266'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)

cflags
harden

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  run 'tinc version'
end
