    checksum: '0703e1a5406fea7aa0072034e815fc2b3188151732ec61b134b0e54aa3e752ab'
  },
  ncurses: {
    version: '6.1-20190302-1',
    checksum: 'bfa6556d88359b3b2815ae198d9acab192df5bbf87c8a2b2915d6a72da5f7111'
  },
  readline: {
    version: '8.0-4',
    checksum: '41211e7d547a8d69d7f37a27d5b5490014a9d01f2dfac3999ce62ab18a4619ba'
  },
  zlib: {
    version: '1.2.11-6',
    checksum: '7da7212123edac6d5d5dc2db8fb10a6af06472578840c51e489e1f391b66c208'
  },
  lzo: {
    version: '2.10-1',
