    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  },
  ncurses: {
    version: '6.1-20180505-1',
    checksum: 'cc5014c9f6ed2fe8fd3eeaa88f6229454b7f6f9026e031a69eefd0a0612c985e'
  },
  readline: {
    version: '7.0p3-21',
    checksum: 'b91e822d1aa389acfa681dfd2a76511e13c6b19976f7a414544c1bc7c2fabcca'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
