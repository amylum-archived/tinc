deps(
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  },
  ncurses: {
    version: '6.0-20171007-1',
    checksum: '5a01f8b5e1a479b41abc28c0db0fca7dd216009aa9ca61a48201458e04f61ee0'
  },
  readline: {
    version: '7.0-34',
    checksum: 'c9087e658c44f221c8ddfb7b1b0dbd830d1db1188ca3f60ab28667e852e215e9'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
