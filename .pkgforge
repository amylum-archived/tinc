    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  },
  ncurses: {
    version: '6.0-20170902-1',
    checksum: '541376efc4c59c9c9d89658822e9bc3fb932c192a967217ca01d463fc9482c0e'
  },
  readline: {
    version: '7.0-29',
    checksum: '7bd36e794bf48d462db1dd82bd7883f435b5ab104ed132d5b968fecadb226242'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
