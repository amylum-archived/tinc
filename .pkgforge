name 'tinc'
org 'amylum'

license 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.17-1',
    checksum: 'b2526797b346c73dc44da02dc16def8eb2059c02bd015f76497e9babadc1a44f'
  },
  ncurses: {
    version: '6.1-20180630-1',
    checksum: '71f61c929f924eccfd4a472b7a91152b94b58577c89b4085cdcacf0041ccfe68'
  },
  readline: {
    version: '7.0p5-6',
    checksum: '4cd5651a74b58021de126b55172fabacee451af815215ff45e511eca51d30e96'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
    version: '1.1.0h-3',
    checksum: 'c9d6db39ea09dd8051cb36c42f85eb8043ce580c6132caa0506a839d88dea275'
  }
)

configure_flags(
  prefix: '/usr',
  sysconfdir: '/etc',
  localstatedir: '/var',
  sbindir: '/usr/bin'
)

cflags
harden

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  run 'tinc version'
end
