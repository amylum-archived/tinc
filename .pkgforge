license 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.17-1',
    checksum: 'b2526797b346c73dc44da02dc16def8eb2059c02bd015f76497e9babadc1a44f'
  },
  ncurses: {
    version: '6.1-20180804-1',
    checksum: '8890dbdfe47316d6b125571ea3bee0660627f19c058a7e8a4983861a9a199a21'
  },
  readline: {
    version: '7.0p5-11',
    checksum: '11a14d1091ea75435475c329b174298a87e08b3bb8cc8583c83a428f66256687'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
