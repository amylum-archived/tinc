name 'tinc'
org 'amylum'

license 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  },
  ncurses: {
    version: '6.1-20180210-1',
    checksum: '3ade66fec9902e3cee9bd4292737662f911e1bc39fdaf6bbac9bf3aa2d04f8bf'
  },
  readline: {
    version: '7.0p3-11',
    checksum: '47ba532d4d4b30d4131a46da4e590f6fe44914580995c0db89e0250fc73b007a'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
