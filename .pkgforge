    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  },
  ncurses: {
    version: '6.1-20180303-1',
    checksum: '5ea4981c1eb341d64aad323a1e5fc5cf215ebe24184e9054704dc1a76770fcfd'
  },
  readline: {
    version: '7.0p3-14',
    checksum: 'c97ad836a0d6c147217f4db36c11d52269979b2344cc66d299eabe96a7d56b02'
  },
  zlib: {
    version: '1.2.11-1',
    checksum: '5596e2d39ef98e2323ac415f50afa71a433ed65c23e8d1f2723f711f5ffb4f32'
  },
  lzo: {
    version: '2.10-1',
    checksum: '67db922b1320bf2856ed8c67a07f433dbab1d410bd1751b81d3909b1d38a578c'
  },
  openssl: {
